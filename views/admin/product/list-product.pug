extends ../admin-layout

block main-content
    .page-title
        h2 List Products
        a(href="/admin/product/add").add-button Add Product

    table
        tr
            th Image File
            th Product Name
            th Price (CAD)
            th(colspan=2) Actions
        
        if (products && products.length > 0)
            each product in products
                tr
                    td
                        img(src=`${product.image}`, alt=`${product.name}`).table-image
                    td
                        span #{product.name}
                    td
                        span #{product.price}
                    td 
                        form(action="/admin/product/edit")
                            input(type="hidden", name="id", value=product._id)
                            button Edit
                    td
                        form(action="/admin/product/delete")
                            input(type="hidden", name="id", value=product._id)
                            button(type="submit") Delete
        
        else
                tr
                    td(colspan=5) 
                        p No Data Found