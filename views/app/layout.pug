doctype html
html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title} Assignment 1 - Node JS
        link(rel='stylesheet', type="text/css", href='/css/styles.css')

    body
        header#header 
            .header-content
                h2#sitename 
                    a(href="/").title #{title}
        nav
            ul
                li
                    a(href='#') Home
                li
                    a(href="/admin") Go to Admin Dashboard

                if username
                    p Welcome, #{username}!
                    form(action="/auth/logout", method="post")
                        input(type="submit", value="Logout")
                else
                a(href="/login") Login
                a(href="/register") Register

                
                    
        main#main 
            block main-content
        
